{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfg.json", "src"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["eslint-config#build", "^lint"],
      "inputs": ["lib", "src", "eslint.config.mjs"]
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["tsconfg.json", "src"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfg.json", "src", "lib"]
    },
    "test:lcov": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfg.json", "src", "lib"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
