  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "internalConsoleOptions": "openOnSessionStart",
      "name": "jest",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      //   "outFiles": ["${workspaceFolder}/lib/*.js"],
      "runtimeArgs": [],
      "args": [
        // "--testMatch",
        "test/${fileBasename}",
        "--testTimeout",
        "3600000"
      ],
      "outputCapture": "std"
    }
  ]
}
